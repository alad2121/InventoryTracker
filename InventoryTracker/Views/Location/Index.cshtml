@using InventoryTracker.Models.ViewModels

@model LocationVM //Tells the application on what that is received from CategoryController would be Ienumerable<Catergory>
   

@{
    ViewData["Title"] = "Index";
}


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Warehouse List</h2>
            </div>
            <div class="col-6 text-end">

                <a asp-controller="Location" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; New Warehouse
                </a>
            </div>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    State
                </th>
                <th>
                    City
                </th>

                <th>
                    Country
                </th>
                <th>
                    Warehouse Name
                </th>
                <th>
                    Number of Products
                </th>
            </tr>
        </thead>

        <tbody>

        @foreach (var obj in Model.Locations)
        {
                <tr>
                    <td>
                    @obj.Id
                    </td>
                    <td width="15%">
                    @obj.State
                    </td>
                    <td width="15%">
                    @obj.City
                    </td>
                    <td width="15%">
                    @obj.Country
                    </td>
                    <td width="15%">
                    @obj.WarehouseName
                    </td>
                    <td width="15%">
                    @obj.NumberOfProducts
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Location" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary nx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                            </a>
                            <a asp-controller="Location" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger nx-2">
                                <i class="bi bi-trash2-fill"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>
        }

        </tbody>
    </table>
