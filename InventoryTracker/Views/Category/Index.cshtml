@using InventoryTracker.Models.ViewModels

@model CategoryVM //Tells the application on what that is received from CategoryController would be Ienumerable<Catergory>

@{
    ViewData["Title"] = "Index";
}


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">

                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; New Category
                </a>
            </div>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Number Of Products
                </th>
            </tr>
        </thead>

        <tbody>

        @foreach (var obj in Model.Categories)
        {
                <tr>
                    <td width="20%">
                    @obj.Id
                    </td>
                    <td width="20%">
                    @obj.Name
                    </td>
                    <td width="20%">
                    @obj.NumberOfProducts
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary nx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger nx-2">
                                <i class="bi bi-trash2-fill"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>
        }

        </tbody>
    </table>
